<?xml version="1.0" encoding="utf-8"?>
<navigation
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/nav_main"
  app:startDestination="@id/firstFragment">

  <fragment
    android:id="@+id/firstFragment"
    android:name="edu.programmingclasses2024winter.FirstFragment"
    tools:layout="@layout/fragment_first">
    <action
      android:id="@+id/actionNavigateToSecondFragment"
      app:destination="@+id/secondFragment" />
  </fragment>

  <fragment
    android:id="@+id/secondFragment"
    android:name="edu.programmingclasses2024winter.SecondFragment"
    tools:layout="@layout/fragment_second">

    <argument
      android:name="passedText"
      android:defaultValue="No arg"
      app:argType="string" />
  </fragment>

  <fragment
    android:id="@+id/thirdFragment"
    android:name="edu.programmingclasses2024winter.ThirdFragment"
    tools:layout="@layout/fragment_third" />

  <action
    android:id="@+id/actionNavigateToThirdFragment"
    app:destination="@id/thirdFragment" />

</navigation>